{% macro navMenu(options, class='') %}
    <ul class='{{ class }}'>
    {% for link in options %}
        <li><a href='{{link.href}}'>{{link.title}}</a></li>
    {% endfor %}
{% endmacro %}

{% macro makePostSummary(post, baseURL) %}
    <a class="grid-item post-link" href="{{baseURL}}/posts/{{post.slug}}">
        <div class="post cover-image" style="background-image: url('https://source.unsplash.com/weekly?{{post.tags[1]}}');">
            <div class="post-title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="post-summary">
                <p>{{post.summary}}</p>
            </div>
        </div>
    </a>
{% endmacro %}

{% macro makeSocialMediaLinks(sites) %}
    {% for site in sites %}
        <a href='{{site.link}}'>
            <img src='{{site.icon}}' class='social-media-img' alt="Link to my {{site.name}}"></img>
        </a>
    {% endfor %}
{% endmacro %}

{% macro importJS() %}
    <script src='/resources/js/masonry.min.js'></script>
    <script src='/resources/js/main.js'></script>
{% endmacro %}
